        quantityStatusElement.textContent = quantityStatus;
        
        
        quantityStatusElement.classList.remove('limited-stock', 'in-stock', 'out-of-stock');
        
    

        if (quantityStatus === 'Out of Stock') {
            quantityStatusElement.classList.add('out-of-stock');
        } else if (quantityStatus.includes('left')) {
            quantityStatusElement.classList.add('limited-stock');
        } else {
            quantityStatusElement.classList.add('in-stock');
        }
    }

