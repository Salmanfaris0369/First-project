      fileInput.value = ''; // Clear the file input
    }
    
    const previewContainer = variantForm.querySelector(`.preview-image[data-index="${imageIndex}"]`);
    if (previewContainer) {
      previewContainer.innerHTML = ''; // Clear the preview
    }
  } else {
    console.error('Variant form not found for image removal');
  }
}

