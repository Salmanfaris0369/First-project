function processVariantForm(variantForm, formData, index, isExisting) {
  console.log(`Processing ${isExisting ? 'existing' : 'new'} variant form ${index + 1}`);

  let colorInput, priceInput, quantityInput;

  if (isExisting) {
    colorInput = variantForm.querySelector('.color-input');
    priceInput = variantForm.querySelector('.price-input');
    quantityInput = variantForm.querySelector('.quantity-input');
  } else {
    colorInput = variantForm.querySelector('input[name="color"]');
    priceInput = variantForm.querySelector('input[name="price"]');
    quantityInput = variantForm.querySelector('input[name="quantity"]');
  }

  if (!colorInput || !priceInput || !quantityInput) {
    console.error(`Missing input fields in variant form ${index + 1}`);
    return; // Skip this iteration
  }

  console.log(`Variant ${index + 1}: Color: ${colorInput.value}, Price: ${priceInput.value}, Quantity: ${quantityInput.value}`);

  formData.append(`variants[${index}][color]`, colorInput.value);
  formData.append(`variants[${index}][price]`, priceInput.value);
  formData.append(`variants[${index}][quantity]`, quantityInput.value);

  // Handle images for both existing and new variants
  const imageInputs = variantForm.querySelectorAll('input[type="file"]');
  imageInputs.forEach((input, imgIndex) => {
    if (input.files.length > 0) {
      formData.append(`variants[${index}][newImages][${imgIndex}]`, input.files[0]);
    }
  });

  // Handle existing images for existing variants
  if (isExisting) {
    const existingImages = variantForm.querySelectorAll('input[name^="variants"][name$="[existingImages][]"]');
    existingImages.forEach((input, imgIndex) => {
      formData.append(`variants[${index}][existingImages][${imgIndex}]`, input.value);
    });
  }
}


