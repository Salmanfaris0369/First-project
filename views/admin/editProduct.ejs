  }

  if (submitAllDataBtn) {
    submitAllDataBtn.addEventListener('click', submitAllData);
  } else {
    console.error('Submit All Data button not found');
  }
});

function addVariantForm() {
  const variantsContainer = document.getElementById('variantsContainer');
  const variantFormTemplate = document.getElementById('variantFormTemplate');
  
  if (!variantsContainer || !variantFormTemplate) {
    console.error('Unable to add variant form: container or template not found');
    return;
  }

  variantCount++;
  const variantForm = document.importNode(variantFormTemplate.content, true);
  const variantFormElement = variantForm.querySelector('.variant-form');

  if (variantFormElement) {
    variantFormElement.setAttribute('data-variant', variantCount);
    
    const variantNumberElement = variantFormElement.querySelector('.variant-number');
    if (variantNumberElement) {
      variantNumberElement.textContent = variantCount;
    }

    for (let i = 0; i < 3; i++) {
      const fileInput = variantFormElement.querySelector(`input[type="file"][data-index="${i}"]`);
      const fileLabel = variantFormElement.querySelector(`label[for="file-${i}"]`);
      if (fileInput && fileLabel) {
        const newId = `file-${variantCount}-${i}`;
        fileInput.id = newId;
        fileLabel.setAttribute('for', newId);
      }
    }
  
    variantsContainer.appendChild(variantForm);
    updateVariantNumbers();
  } else {
    console.error('Unable to find variant form element in template');
  }
}

function handleVariantContainerClick(event) {
  if (event.target.classList.contains('remove-variant')) {
    const variantForm = event.target.closest('.variant-form');
    if (variantForm) {
      console.log('Removing variant form');
      variantForm.remove();
      updateVariantNumbers();
    } else {
      console.error('Variant form not found');
    }
  }
}

function updateVariantNumbers() {
  console.log('Updating variant numbers');
  const variantForms = document.querySelectorAll('.variant-form');
  variantForms.forEach((form, index) => {
    const variantNumber = form.querySelector('.variant-number');
    if (variantNumber) {
      variantNumber.textContent = index + 2;
    }
    form.setAttribute('data-variant', index + 2);
  });
  variantCount = variantForms.length;
  console.log('New variant count:', variantCount);
}

function handleImageUpload(event, input, index) {
  const file = event.target.files[0];
  if (file) {
    const reader = new FileReader();
    reader.onload = function(e) {
      currentVariantElement = input.closest('.variant-form');
      currentImageIndex = index;
     
      if (currentVariantElement) {
        openCropModal(e.target.result);
      } else {
        console.error('Variant form not found');
      }
    }
    reader.readAsDataURL(file);
  }
}

function openCropModal(imageSrc) {
  const modal = new bootstrap.Modal(document.getElementById('cropModal'));
  const cropContainer = document.getElementById('cropContainer');

  cropContainer.innerHTML = '';
  const image = document.createElement('img');
  image.src = imageSrc;
  cropContainer.appendChild(image);

  modal.show();

  modal._element.addEventListener('shown.bs.modal', function () {
    setTimeout(() => {
      cropper = new Cropper(image, {
        aspectRatio: 1,
        viewMode: 1,
        dragMode: 'move',
        scalable: true,
        zoomable: true,
        minCropBoxWidth: 100,
        minCropBoxHeight: 100,
      });
    }, 100);
  }, { once: true });
}

function cropImage() {
  if (cropper) {
    const croppedCanvas = cropper.getCroppedCanvas({
      width: 300,
      height: 300,
      minWidth: 100,
      minHeight: 100,
      maxWidth: 4096,
      maxHeight: 4096,
      fillColor: '#fff',
      imageSmoothingEnabled: true,
      imageSmoothingQuality: 'high'
    });

    croppedCanvas.toBlob(function(blob) {
      const croppedFile = new File([blob], `cropped_image_${currentImageIndex}.jpg`, { type: 'image/jpeg', lastModified: Date.now() });
      const variantIndex = currentVariantElement.getAttribute('data-variant');
      updateFileInput(variantIndex, currentImageIndex, croppedFile);
      updatePreview(currentImageIndex, URL.createObjectURL(croppedFile));
      
      const modal = bootstrap.Modal.getInstance(document.getElementById('cropModal'));
      modal.hide();
    }, 'image/jpeg', 0.95);
  }
}

function updateFileInput(variantIndex, imageIndex, file) {
  const variantForm = document.querySelector(`.variant-form[data-variant="${variantIndex}"]`);
  const fileInput = variantForm.querySelector(`input[type="file"][data-index="${imageIndex}"]`);
  const dataTransfer = new DataTransfer();
  dataTransfer.items.add(file);
  fileInput.files = dataTransfer.files;
}

function updatePreview(imageIndex, imageSrc) {
  const previewContainer = currentVariantElement.querySelector(`.preview-image[data-index="${imageIndex}"]`);
  previewContainer.innerHTML = `
    <div class="image-preview-wrapper">
      <img src="${imageSrc}" alt="Preview" class="preview-image-fit">
    </div>
    <button type="button" class="btn btn-sm btn-danger mt-1" onclick="removeImage(event)" data-image-index="${imageIndex}">Remove</button>
  `;
}

function removeImage(event) {
  const button = event.target;
  const variantForm = button.closest('.variant-form');
  if (variantForm) {
    const imageIndex = button.getAttribute('data-image-index');
    const fileInput = variantForm.querySelector(`input[type="file"][data-index="${imageIndex}"]`);
