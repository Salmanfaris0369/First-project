<script>
 document.addEventListener('DOMContentLoaded', function() {
  // Handle removing existing images
  document.body.addEventListener('click', function(event) {
    if (event.target.classList.contains('remove-image')) {
      const imageWrapper = event.target.closest('.image-wrapper');
      if (imageWrapper) {
        imageWrapper.remove();
      }
    }
  });

  // Handle adding new images to existing variants
  document.body.addEventListener('change', function(event) {
    if (event.target.classList.contains('new-image-input')) {
      handleNewImages(event, event.target.dataset.variant);
    }
  });

  // Handle adding new variants
  const addNewVariantButton = document.getElementById('addNewVariant');
  if (addNewVariantButton) {
    addNewVariantButton.addEventListener('click', addNewVariant);
  }

  // Set up the cropper
  let cropper;
  const cropModal = new bootstrap.Modal(document.getElementById('cropModal'));
  
  function handleNewImages(event, variantIndex) {
    const files = event.target.files;
    const imageContainer = event.target.closest('.image-container');
    
    for (let file of files) {
      const reader = new FileReader();
      reader.onload = function(e) {
        showCropModal(e.target.result, variantIndex, imageContainer);
      }
      reader.readAsDataURL(file);
    }
  }

  function showCropModal(imageSrc, variantIndex, imageContainer) {
    const cropContainer = document.getElementById('cropContainer');
    if (!cropContainer) return;

    cropContainer.innerHTML = `<img src="${imageSrc}" id="imageToCrop">`;
    
    cropper = new Cropper(document.getElementById('imageToCrop'), {
      aspectRatio: 1,
      viewMode: 1,
    });

    const cropAndContinueButton = document.getElementById('cropAndContinue');
    if (cropAndContinueButton) {
      cropAndContinueButton.onclick = function() {
        const croppedCanvas = cropper.getCroppedCanvas();
        const img = document.createElement('img');
        img.src = croppedCanvas.toDataURL();
        img.width = 100;
        
        const wrapper = document.createElement('div');
        wrapper.className = 'image-wrapper';
        wrapper.appendChild(img);
        
        const removeButton = document.createElement('button');
        removeButton.className = 'btn btn-danger btn-sm mt-2 remove-image';
        removeButton.textContent = 'Remove';
        wrapper.appendChild(removeButton);
        
        imageContainer.insertBefore(wrapper, imageContainer.querySelector('.image-upload-container'));
        
        cropModal.hide();
        cropper.destroy();
      };
    }

    cropModal.show();
  }

  



});

document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('productForm');
    const newImagesInput = document.getElementById('newImages');

    function showError(input, message) {
        const formGroup = input.closest('.form-group');
        const errorElement = formGroup.querySelector('.invalid-feedback') || document.createElement('div');
        errorElement.className = 'invalid-feedback';
        errorElement.textContent = message;
        formGroup.appendChild(errorElement);
        input.classList.add('is-invalid');
    }

    function clearError(input) {
        const formGroup = input.closest('.form-group');
        const errorElement = formGroup.querySelector('.invalid-feedback');
        if (errorElement) {
            errorElement.remove();
        }
        input.classList.remove('is-invalid');
    }

    form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        let isValid = true;

        // Validate product name
        const productName = form.querySelector('[name="productName"]');
        if (!productName.value.trim()) {
            showError(productName, 'Please enter a product name.');
            isValid = false;
        } else {
            clearError(productName);
        }

        // Validate category
        const category = form.querySelector('[name="productCategory"]');
        if (!category.value) {
            showError(category, 'Please select a category.');
            isValid = false;
        } else {
            clearError(category);
        }

        // Validate brand
        const brand = form.querySelector('[name="productBrand"]');
        if (!brand.value) {
            showError(brand, 'Please select a brand.');
            isValid = false;
        } else {
            clearError(brand);
        }

        // Validate gender
        const gender = form.querySelector('input[name="productGender"]:checked');
        if (!gender) {
            const genderGroup = form.querySelector('.radio-group');
            const errorElement = document.createElement('div');
            errorElement.className = 'invalid-feedback d-block';
            errorElement.textContent = 'Please select a gender.';
            genderGroup.appendChild(errorElement);
            isValid = false;
        } else {
            const genderGroup = form.querySelector('.radio-group');
            const errorElement = genderGroup.querySelector('.invalid-feedback');
            if (errorElement) {
                errorElement.remove();
            }
        }

        // Validate description
        const description = form.querySelector('[name="productDescription"]');
        if (!description.value.trim()) {
            showError(description, 'Please enter a product description.');
            isValid = false;
        } else {
            clearError(description);
        }

        // Validate images
        const existingImages = form.querySelectorAll('input[name="variants[0][existingImages][]"]');
        const newImages = newImagesInput.files;
        if (existingImages.length === 0 && newImages.length === 0) {
            const imageContainer = form.querySelector('.image-container');
            const errorElement = document.createElement('div');
            errorElement.className = 'invalid-feedback d-block';
            errorElement.textContent = 'Please add at least one image.';
            imageContainer.appendChild(errorElement);
            isValid = false;
        } else {
            const imageContainer = form.querySelector('.image-container');
            const errorElement = imageContainer.querySelector('.invalid-feedback');
            if (errorElement) {
                errorElement.remove();
            }
        }

        // Validate color, price, and quantity
        const color = form.querySelector('[name="variants[0][color]"]');
        const price = form.querySelector('[name="variants[0][price]"]');
        const quantity = form.querySelector('[name="variants[0][quantity]"]');

        if (!color.value.trim()) {
            showError(color, 'Please enter a color.');
            isValid = false;
        } else {
            clearError(color);
        }

        if (!price.value || price.value <= 0) {
            showError(price, 'Please enter a valid price.');
            isValid = false;
        } else {
            clearError(price);
        }

        if (!quantity.value || quantity.value < 0) {
            showError(quantity, 'Please enter a valid quantity.');
            isValid = false;
        } else {
            clearError(quantity);
        }

        if (!isValid) {
            return;
        }

        const formData = new FormData(form);

        fetch('/admin/product/editProduct', {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                Swal.fire({
                    title: 'Success!',
                    text: 'Product updated successfully',
                    icon: 'success',
                    confirmButtonText: 'OK'
                });
                
            } else {
                Swal.fire({
                    title: 'Error!',
                    text: 'Failed to update product: ' + data.message,
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            }
        })
        .catch(error => {
            console.error('Error:', error);
            Swal.fire({
                title: 'Error!',
                text: 'Failed to update product: ' + error.message,
                icon: 'error',
                confirmButtonText: 'OK'
            });
        });
    });
});


