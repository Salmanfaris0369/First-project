<script>

let ecropper = null;
let ecurrentVariantIndex;
let ecurrentImageIndex;
let eimagesToCrop = [];

function ehandleImageSelect(event, variantIndex) {
  const files = event.target.files;
  ecurrentVariantIndex = variantIndex;
  eimagesToCrop = Array.from(files);
  
  if (eimagesToCrop.length > 0) {
    ecurrentImageIndex = 0;
    ecropNextImage();
  }
}

function ecropNextImage() {
  if (ecurrentImageIndex < eimagesToCrop.length) {
    const file = eimagesToCrop[ecurrentImageIndex];
    const reader = new FileReader();
    reader.onload = function(e) {
      eopenCropModal(e.target.result);
    }
    reader.readAsDataURL(file);
  } else {
    // All images have been cropped
    eupdatePreview();
  }
}

function eopenCropModal(imageSrc) {
  const modal = new bootstrap.Modal(document.getElementById('ecropModal'));
  const cropContainer = document.getElementById('ecropContainer');

  // Clean up any existing cropper instance
  if (ecropper) {
    ecropper.destroy();
    ecropper = null;
  }

  cropContainer.innerHTML = '';
  const image = document.createElement('img');
  image.src = imageSrc;
  cropContainer.appendChild(image);

  modal.show();

  modal._element.addEventListener('shown.bs.modal', function () {
    setTimeout(() => {
      if (image.complete) {
        initializeCropper(image);
      } else {
        image.onload = () => initializeCropper(image);
      }
    }, 100);
  });
}

function initializeCropper(image) {
  if (ecropper) {
    ecropper.destroy();
  }
  ecropper = new Cropper(image, {
    aspectRatio: 1,
    viewMode: 1,
    dragMode: 'move',
    scalable: true,
    zoomable: true,
    minCropBoxWidth: 100,
    minCropBoxHeight: 100,
  });
}

function ecropImage() {
  if (ecropper) {
    const croppedCanvas = ecropper.getCroppedCanvas({
      width: 300,
      height: 300
    });

    croppedCanvas.toBlob(function(blob) {
      // Replace the original image with the cropped one
      eimagesToCrop[ecurrentImageIndex] = new File([blob], `cropped_image_${ecurrentImageIndex}.jpg`, { type: 'image/jpeg', lastModified: Date.now() });

      // Move to the next image
      ecurrentImageIndex++;
      const modal = bootstrap.Modal.getInstance(document.getElementById('ecropModal'));
      modal.hide();

      // Clean up the cropper instance
      if (ecropper) {
        ecropper.destroy();
        ecropper = null;
      }

      // Crop the next image or update preview if done
      ecropNextImage();
    }, 'image/jpeg');
  }
}

function eupdatePreview() {
  const previewContainer = document.getElementById(`imagePreview${ecurrentVariantIndex}`);
  previewContainer.innerHTML = ''; // Clear existing previews

  eimagesToCrop.forEach((file, index) => {
    const preview = document.createElement('div');
    preview.className = 'm-1';
    preview.innerHTML = `
      <img src="${URL.createObjectURL(file)}" alt="Preview" style="width: 100px; height: 100px; object-fit: cover;">
      <button type="button" class="btn btn-sm btn-danger mt-1" onclick="eremoveImage(${ecurrentVariantIndex}, ${index})">Remove</button>
    `;
    previewContainer.appendChild(preview);
  });

  // Update file input
  const fileInput = document.getElementById(`eimageInput${ecurrentVariantIndex}`);
  const dataTransfer = new DataTransfer();
  eimagesToCrop.forEach(file => dataTransfer.items.add(file));
  fileInput.files = dataTransfer.files;
}

function eremoveImage(variantIndex, imageIndex) {
  eimagesToCrop.splice(imageIndex, 1);
  eupdatePreview();
}
</script>


<script>
let variantCount = 0;
let cropper;
let currentVariantElement;
let currentImageIndex;

document.addEventListener('DOMContentLoaded', function() {
  const addVariantBtn = document.getElementById('addVariantBtn');
  const variantsContainer = document.getElementById('variantsContainer');
  const submitAllDataBtn = document.getElementById('submitAllData');
   
