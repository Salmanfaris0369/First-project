<script>
  document
    .getElementById("addCategoryForm")
    .addEventListener("submit", function (e) {
      e.preventDefault();
      const categoryName = document.getElementById("categoryName").value;

      fetch("/admin/categories/add", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ categoryName: categoryName }),
      })
        .then((response) => {
          if (!response.ok) {
            throw new Error("Network response was not ok");
          }
          return response.json();
        })
        .then((data) => {
          console.log("Success:", data);
          const modal = new bootstrap.Modal(
            document.getElementById("addCategoryModal")
          );
          modal.hide();
          location.reload(); // Refresh the page to update the category list
        })
        .catch((error) => {
          console.error("Error:", error);
          alert("Failed to add category. Please try again.");
        });
    });

  //   edit---->
  // Function to open the edit modal and populate it with category data
  function openEditModal(categoryId, categoryName) {
    document.getElementById("editCategoryId").value = categoryId;
    document.getElementById("editCategoryName").value = categoryName;

    console.log(categoryId);
    console.log(categoryName);

    const editModal = new bootstrap.Modal(
      document.getElementById("editCategoryModal")
    );
    editModal.show();
  }

  // Event listener for the edit form submission
  document
    .getElementById("editCategoryForm")
    .addEventListener("submit", function (e) {
      e.preventDefault();
      const categoryId = document.getElementById("editCategoryId").value;
      const categoryName = document.getElementById("editCategoryName").value;

      console.log(categoryId + "ddd");
      console.log(categoryName);

      fetch("/admin/categories/edit", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          categoryId: categoryId,
          categoryName: categoryName,
        }),
      })
        .then((response) => {
          if (!response.ok) {
            return response.json().then((err) => {
              throw err;
            });
          }
          return response.json();
        })
        .then((data) => {
          console.log("Success:", data);
          const modal = bootstrap.Modal.getInstance(
            document.getElementById("editCategoryModal")
          );
          modal.hide();
          location.reload(); // Refresh the page to update the category list
        })
        .catch((error) => {
          console.error("Error:", error);
          //     alert(error.message || 'Failed to edit category. Please try again.');
        });
    });

  // <---deleteCategory---->

  function deleteCategory(categoryId) {
    console.log(categoryId);
    Swal.fire({
      title: "Are you sure?",
      text: "You want to delete this category!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, delete it!",
    }).then((result) => {
      if (result.isConfirmed) {
        // Assuming you have a route to handle delete
        fetch("/admin/categories/delete", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ categoryId: categoryId }), // replace with actual category ID
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.success) {
              Swal.fire(
                "Deleted!",
                "Category has been deleted.",
                "success"
              ).then(() => {
                location.reload(); // Reload the page to reflect changes
              });
            } else {
              Swal.fire(
                "Error!",
                "There was an issue deletee the category.",
                "error"
              );
            }
          })
          .catch((error) => {
            Swal.fire(
              "Error!",
              "There was an issue delete the category.",
              "error"
            );
          });
      }
    });
  }
</script>

